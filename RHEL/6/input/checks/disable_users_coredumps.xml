<def-group>
  <definition class="compliance" id="disable_users_coredumps" version="1">
    <metadata>
      <title>Disable Core Dumps</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <description>Core dumps for all users should be disabled</description>
      <reference source="MED" ref_id="20130807" ref_url="test_attestation" />
    </metadata>
    <criteria operator="OR">
      <!-- limits.d/*.conf have higher precedense than limits.conf. see also: pam_limits(8) -->
      <criterion comment="Are core dumps disabled in /etc/security/limits.d/*.conf" test_ref="test_core_dumps_limitsdirconf" />
      <criteria operator="AND">
        <criterion comment="Are core dumps disabled in /etc/security/limits.conf" test_ref="test_core_dumps_limitsconf" />
        <criteria operator="OR">
          <criterion comment="Are core dumps disabled in /etc/security/limits.d/*.conf" test_ref="test_core_dumps_limitsdirconf" />
          <criterion comment="Are core dumps enabled in /etc/security/limits.d/*.conf" test_ref="test_core_dumps_enabled_limitsdirconf" />
        </criteria>
      </criteria>
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" comment="Tests the value of the ^[\s]*\*[\s]+(hard|-)[\s]+core[\s]+([\d]+) setting in the /etc/security/limits.conf file" id="test_core_dumps_limitsconf" version="1">
    <ind:object object_ref="object_core_dumps_limitsconf" />
    <ind:state state_ref="state_core_dumps_limitsconf" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state id="state_core_dumps_limitsconf" version="1">
    <ind:subexpression operation="equals">0</ind:subexpression>
  </ind:textfilecontent54_state>
  <ind:textfilecontent54_object id="object_core_dumps_limitsconf" version="1">
    <ind:filepath>/etc/security/limits.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*\*[\s]+hard[\s]+core[\s]+([\d]+)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" comment="Tests the value of the ^[\s]*\*[\s]+(hard|-)[\s]+core[\s]+([\d]+) setting in the /etc/security/limits.d/*.conf file" id="test_core_dumps_limitsdirconf" version="1">
    <ind:object object_ref="object_core_dumps_limitsdirconf" />
    <ind:state state_ref="state_core_dumps_limitsconf" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test check="all" comment="Tests the value of the ^[\s]*\*[\s]+(hard|-)[\s]+core[\s]+([\d]+) setting in the /etc/security/limits.d/*.conf file" id="test_core_dumps_enabled_limitsdirconf" version="1">
    <ind:object object_ref="object_core_dumps_limitsdirconf" />
    <ind:state state_ref="state_core_dumps_enabled_limitsconf" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_core_dumps_limitsdirconf" version="1">
    <ind:path>/etc/security/limits.d</ind:path>
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*\*[\s]+hard[\s]+core[\s]+([\d]+)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_core_dumps_enabled_limitsconf" version="1">
    <ind:subexpression operation="greater than">0</ind:subexpression>
  </ind:textfilecontent54_state>
</def-group>
